<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ordercard1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    app:cardElevation="20dp"
    app:cardCornerRadius="30dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:weightSum="6">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/ordertype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Plumbing Service"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/font1"
                    android:layout_weight="1"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/orderdelete1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_weight="0"
                    android:src="@drawable/delete"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/orderservice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:text="What Kind Of Service"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="@font/font1"
                    android:textColor="@color/black"
                    android:background="@drawable/txtvwborder"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/orderadress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/txtvwborder"
                    android:drawablePadding="8dp"
                    android:ems="10"
                    android:padding="8dp"
                    app:drawableStartCompat="@drawable/house"
                    android:gravity="center_vertical"
                    android:text="31,paras Bunglows,near ringroad,Kathwada road,nava naroda,ahmedabad,382330"
                    android:textSize="20sp"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:fontFamily="@font/font1"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/orderfullName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/orderemailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/orderPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>




