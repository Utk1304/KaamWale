<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="help.service.kaamwale.Carwash.Cardetail">


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wordcloudfinal"
        android:scaleType="fitCenter"
        android:alpha="0.6"/>

    <ScrollView
        android:id="@+id/plumbingscrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/plumbingtxtvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="Plumbing Service At Your Door Step"
                android:textColor="#036794"
                android:textSize="19sp"
                android:fontFamily="@font/font1"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/plumbinglinear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtvw">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/plumb1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:layout_marginStart="120dp"
                    android:layout_marginEnd="120dp"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:checkedIconTint="@color/black">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/plumblogo" />


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/plumbingcard1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:padding="15dp"
                app:cardBackgroundColor="#F6F0FF"
                app:cardCornerRadius="25dp"
                app:cardElevation="15dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear2">

                <LinearLayout
                    android:id="@id/plumbinglinear1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="35dp"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/plumbingtextView"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="8dp"
                        android:text="Choose Your Requirements"
                        android:textColor="#055F88"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="@font/font1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioGroup
                        android:id="@+id/plumbingRadiogroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <RadioButton
                            android:id="@+id/plumbingrd1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:button="@drawable/custom_icon"
                            android:paddingLeft="10dp"
                            android:fontFamily="@font/font1"
                            android:text="Maintenance"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/plumbingrd2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:button="@drawable/custom_icon"
                            android:paddingLeft="10dp"
                            android:fontFamily="@font/font1"
                            android:text="New Installation"
                            android:textSize="18sp" />

                    </RadioGroup>


                    <Button
                        android:id="@+id/plumbingbs"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/font1"
                        android:background="@drawable/cwbtn"
                        android:text="Select Service" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/plumbingtxtvw1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:visibility="invisible" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/plumbingcard2"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:cardBackgroundColor="#F6F0FF"
                app:cardCornerRadius="25dp"
                app:cardElevation="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:weightSum="5">

                    <TextView
                        android:fontFamily="@font/font1"
                        android:id="@+id/plumbingtextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:text="Kindly Enter Your Details"
                        android:textColor="#055F88"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/plumbingpostal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:background="@drawable/round_border"
                            android:drawableStart="@drawable/postal"
                            android:drawablePadding="16dp"
                            android:ems="10"
                            android:fontFamily="@font/font1"
                            android:hint="Pincode"
                            android:inputType="number"
                            android:padding="16dp" />

                        <EditText
                            android:id="@+id/plumbingcity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/round_border"
                            android:drawableStart="@drawable/city"
                            android:drawablePadding="16dp"
                            android:ems="10"
                            android:hint="City"
                            android:fontFamily="@font/font1"
                            android:padding="16dp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <EditText
                        android:id="@+id/plumbingSociety"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_border"
                        android:drawableStart="@drawable/house"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/font1"
                        android:ems="10"
                        android:hint="House No., Building Name"
                        android:padding="16dp" />

                    <EditText
                        android:id="@+id/plumbingnearby"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_border"
                        android:drawableStart="@drawable/location"
                        android:drawablePadding="16dp"
                        android:ems="10"
                        android:fontFamily="@font/font1"
                        android:hint="Landmark"
                        android:padding="16dp" />

                    <EditText
                        android:id="@+id/plumbingstreet"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/font1"
                        android:background="@drawable/round_border"
                        android:drawableStart="@drawable/street1"
                        android:drawablePadding="16dp"
                        android:ems="10"
                        android:hint="Road Name, Area, Colony"
                        android:inputType="text"
                        android:padding="16dp" />


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/plumbingNext"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="70dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:fontFamily="@font/font1"
                android:background="@drawable/cwbtn"
                android:text="Next" />


        </LinearLayout>
    </ScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/offeraheet2" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>




</androidx.constraintlayout.widget.ConstraintLayout>